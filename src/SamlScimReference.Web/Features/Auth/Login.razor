@page "/login"
@using Microsoft.AspNetCore.Authentication

<PageTitle>Login</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>SAML/SCIM Reference Application</h3>
                </div>
                <div class="card-body text-center">
                    <p>Please sign in using your organization's identity provider.</p>
                    <a href="/auth/saml-login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In with SAML
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
